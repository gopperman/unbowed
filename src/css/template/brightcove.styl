.brightcove
	padding 0 20px
	
	&__video--container
		padding 25px 0 56.25% /* 16:9 */
		position relative
		height 0
		width 100%
	
	iframe
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
	
@media only screen and (min-width: 768px)
	.brightcove
		margin 1rem auto
		max-width 900px