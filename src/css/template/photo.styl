.photo	
	&__container
		padding-bottom 25px
		
		&--fullwidth
			padding 25px 0 5px
			
	&__attribution
		color $gray
		font-family $sans
		font-weight bold
		
	&__caption
		color $gray-medium
		font-family $sans
		font-size .8rem
		line-height 1.2rem
		
@media only screen and (min-width: 768px) 
	.triptych
		flex-grid(3, 'photo__container')
		
		.photo
			&__container
				padding 12px
				
				&:first-child
					padding-left 0
					
				&:last-child
					padding-right 0

			&__caption
				padding 0 10px
	
	.photo-quotes
		margin 50px 0
		
		&__container			
			.photo__container
				flex-grid(2, 'photo__container--child')
				align-items center
				justify-content center
				padding 0
				
			&:nth-child(2n)
				.photo__container
					flex-direction row-reverse
			
		.photo
			&__figcaption
				padding 0 40px
				
			&__caption
				font-size 1rem
