<figure class="photo__container{{#if fullwidth}} photo__container--fullwidth{{/if}}">
	<img class="photo__img photo__container--child" src="{{src}}" alt="{{caption}}" />
	{{#if caption}}<figcaption aria-hidden="true" class="photo__figcaption photo__container--child">
		<p class="photo__caption">{{caption}}</p>
		{{#if attribution }}<p class="photo__attribution">{{attribution}}</p>{{/if}}
	</figcaption>{{/if}}
</figure>